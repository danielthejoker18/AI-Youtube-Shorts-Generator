# AI Service Provider Configuration
# Choose between 'groq' or 'openai' or 'ollama' for the LLM provider
LLM_PROVIDER=groq

# API Keys for Various Services
# OpenAI API key for GPT models and Whisper (if using OpenAI as provider)
OPENAI_API_KEY=
# Groq API key for LLM services (if using Groq as provider)
GROQ_API_KEY=
# YouTube Data API key for video operations
YOUTUBE_API_KEY=

# Audio Processing Configuration
# Whisper model size: 'tiny', 'base', 'small', 'medium', 'large'
# Larger models are more accurate but slower
WHISPER_MODEL=base
# Minimum duration in seconds for speaker segments
# Lower values may catch shorter utterances but increase noise
SPEAKER_MIN_DURATION=0.5
# Confidence threshold for face detection (0.0 to 1.0)
# Higher values mean stricter detection but may miss some faces
FACE_DETECTION_CONFIDENCE=0.5

# Video Processing Parameters
# Target frames per second for output videos
# Standard for smooth playback while maintaining file size
TARGET_FPS=30
# Maximum number of faces to track simultaneously
# Higher values allow tracking more people but use more resources
MAX_FACES=5
# Video cropping ratio (0.0 to 1.0)
# 0.9 means keeping 90% of the frame, cropping 5% from each side
CROP_RATIO=0.9
# Vertical aspect ratio for Shorts format (9:16)
# Standard ratio for vertical video platforms
VERTICAL_RATIO=0.5625  # 9/16

# System Settings
# Logging verbosity: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Directory for storing temporary and cached files
CACHE_DIR=cache
